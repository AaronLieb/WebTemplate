<!DOCTYPE html>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<script src="https://cdn.jsdelivr.net/npm/reefjs@12/dist/reef.min.js"></script>
<link rel="stylesheet" href="https://unpkg.com/@picocss/pico@1.*/css/pico.min.css">
<link rel="icon" href="favicon.png">
<link href="css/global.css" rel="stylesheet">

<div class="container-fluid">
  <nav>
    <nav aria-label="breadcrumb">
      <ul id="breadcrumb">
        <li><a href='/'>home</a></li>
      </ul>
    </nav>
    <nav>
      <ul>
        <li>item1</li>
        <li>item2</li>
        <li>item3</li>
      </ul>
    </nav>
  </nav>
</div>

<main class="container">
  {{{ body }}}
</main>

<footer class="container">
  <p>
    <small>Footer</small>
  </p>
</footer>

<script>
  onload = () => {
    let b = document.getElementById("breadcrumb");
    let c = location.pathname.split('/').filter(x => x)
    c.slice(0, -1).forEach((v, i) => b.innerHTML += `<li><a href='${c.slice(0, i + 1).join('/') || '/'}'>${v || "home"}</a></li>`)
    if (c.length) b.innerHTML += `<li>${c.pop()}</li>`
  }
</script>
